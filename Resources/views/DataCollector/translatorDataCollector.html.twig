{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
    <a href="#" class="domis86_translator_data_collector_clickable">
        <img class="domis86_web_debug_dialog_toolbar_icon_img_warning" alt="Translator icon"
             style="padding-top: 7px; padding-bottom: 5px"
             src="data:image/png;base64,%3D%3D"/>
        <img class="domis86_web_debug_dialog_toolbar_icon_img_edit" alt="Translator icon"
             style="display:none; padding-top: 7px; padding-bottom: 5px"
             src="data:image/png;base64,"/>
        <span class="domis86_translator_data_collector_icon_text sf-toolbar-status">translations</span>
    </a>
    {% endset %}
    {% set text %}
    <div class="sf-toolbar-info-piece domis86_translator_data_collector_clickable">
        {# TODO: support Profiler view? #}
        {# TODO: add some info here (about translated/untranslated messages etc) #}
        <span>[Click to edit translations]</span>
    </div>

    {% if not collector.backendMode %}
        {{ render(controller('domis86_translator.controller.translator_controller:webDebugDialogAction', { 'location': collector.location })) }}
    {% endif %}
    
    {% endset %}
    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': false } %}
{% endblock %}
